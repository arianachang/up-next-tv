<script src="/javascripts/themoviedb.js"></script>
<script src="/javascripts/tvOnAir.js"></script>

<h1>On Air</h1>

{{#if error}} 
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1 hid">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 text-center">
					<div id="error" class="alert alert-danger"><strong>Error:</strong> {{error}}</div>
                </div>
            </div>
        </div>
    </div>
{{/if}}

<form method="POST" action="" id="addToList">
	<div class="row same-height" id="mainContent"></div>
	<button id="loadMore" class="btn btn-info">Load More</button>
	<div class="form-group">
		<input type="hidden" name="_csrf" id="_csrf" value="{{csrfToken}}"/>
		<input type="submit" class="btn btn-primary" name="submitBtn" value="Add Shows to My List"/>
	</div>
		<span class="input-group-btn" id="addShowsDiv">
			<button type="button" class="btn btn-default" id="addShowsBtn">
				<span class="glyphicon glyphicon-plus"></span>
			</button>
        </span>
</form>